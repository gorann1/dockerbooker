<%= search_form_for @q do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name_cont, class: 'bg-purple-white shadow rounded border-0 p-3', type:"search" %>
  <%= f.submit class: 'btn btn-primary' %>

  <div>
    <%= f.label :regija %>
    <%= f.text_field :region_name_cont, class: 'bg-purple-white shadow rounded border-0 p-3' %>
  </div>

  <div class="form-group"><%= f.label :dubina, "Dubina veća ili jednaka" %>
    <%= f.text_field :mindepth_gteq, class: 'bg-purple-white shadow rounded border-0 p-3' %>
    <%= f.text_field :mindepth_lteq, class: 'bg-purple-white shadow rounded border-0 p-3' %></div>

  <%= f.label :vidljivost %>
  <%= f.text_field :visibility_cont, class: 'bg-purple-white shadow rounded border-0 p-3' %>
  <div>
    <%= f.label :struje %>
    <%= f.text_field :currents_cont, class: 'bg-purple-white shadow rounded border-0 p-3' %>
  </div>





<% end %>
<%= link_to "Reset", request.path, class: "btn btn-default" %>

<div class="flex flex-wrap -mx-4">
  <% @locations.each do |location| %>
<div class="w-full sm:w-1/2 md:w-1/2 xl:w-1/3 p-4">
      <a href="" class="c-card block bg-white shadow-md hover:shadow-xl rounded-lg overflow-hidden">
        <div class="relative pb-48 overflow-hidden">
          <%if location.master_image.present?%>
            <%= image_tag location.master_image, class:"absolute inset-0 h-full w-full object-cover" %>
          <% end %>
        </div>
        <div class="p-4">
          <span class="inline-block px-2 py-1 leading-none bg-orange-200 text-orange-800 rounded-full font-semibold uppercase tracking-wide text-xs"><%= location.region.name %></span>
          <h2 class="mt-2 mb-2  font-bold"><%= location.name %></h2>
          <p class="text-sm"><%= sanitize(location.desc[0..330]) %></p>
