<%= form_for([@location, @location.reviews.new]) do |f| %>
  <div id="user_stars">
  </div>
  <%= f.text_field :comment, class:"px-3 py-3 placeholder-blueGray-300 text-blueGray-600 relative bg-white bg-white rounded text-sm border-0 shadow outline-none focus:outline-none focus:ring w-full" %>

  <%= f.hidden_field :location_id, value:@location.id %>
  <button class="button">
    <%= f.submit %>
  </button>
<% end %>

<script type="text/javascript" charset="utf-8">
        $(document).ready(function(){
        $('#user_stars').raty({
            path:'/assets',
            scoreName: 'review[star]',
            score: 1
          })
    });
</script>